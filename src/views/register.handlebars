<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <div class="register">
      <div class="register-container">
        <h2 class="register-title">Registrarse</h2>
        <form id="formRegister">
          <div class="form-group">
            <label for="first_name" class="register-label">Nombre</label>
            <input
              type="text"
              id="first_name"
              name="first_name"
              class="register-input"
              required
            />
          </div>
          <div class="form-group">
            <label for="last_name" class="register-label">Apellido</label>
            <input
              type="text"
              id="last_name"
              name="last_name"
              class="register-input"
              required
            />
          </div>
          <div class="form-group">
            <label for="email" class="register-label">Correo</label>
            <input
              type="email"
              id="email"
              name="email"
              class="register-input"
              required
            />
          </div>
          <div class="form-group">
            <label for="age" class="register-label">Edad</label>
            <input
              type="number"
              id="age"
              name="age"
              class="register-input"
              required
            />
          </div>
          <div class="form-group">
            <label for="password" class="register-label">Contraseña</label>
            <input
              type="password"
              id="password"
              name="password"
              class="register-input"
              required
            />
          </div>
          <div class="form-group">
            <label for="rol" class="register-label">Seleccione el Rol</label>
            <select name="rol" id="rol">
              <option value="usuario">usuario</option>
              <option value="admin">admin</option>
              <option value="premium">premium</option>
            </select>
          </div>
          <button type="submit" class="register-button">Registrarse</button>
        </form>
        <div class="back-to-login">
          <a href="/">Volver al inicio de sesión</a>
        </div>
      </div>
    </div>
  <script src="/js/client.js"></script>
  </body>
</html>